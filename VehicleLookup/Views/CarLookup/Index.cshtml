@using VehicleLookup.DTOs
@{
    ViewBag.Title = "Car Lookup";
    var makes = ViewBag.Makes as List<MakeDetailsDTO>;
}

<h2 class="mb-4">Car Lookup</h2>

<form asp-controller="CarLookup" asp-action="GetVehicleResults" method="post" class="p-4 border rounded shadow-sm bg-light">
    <div class="mb-3">
        <label for="makeSelect" class="form-label">Select Make:</label>
        <select id="makeSelect" name="makeId" class="form-select" required>
            <option value="">Choose Make</option>
            @foreach (var make in makes)
            {
                <option value="@make.Make_ID">@make.Make_Name</option>
            }
        </select>
    </div>

    <div class="mb-3">
        <label for="yearInput" class="form-label">Enter Manufacture Year:</label>
        <input type="number" id="yearInput" name="year" class="form-control"
               min="1940" max="@DateTime.Now.Year" required />
    </div>

    <button type="submit" class="btn btn-primary">Search</button>
</form>